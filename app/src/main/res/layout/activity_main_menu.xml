<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.rene.steppenwolf.MainMenu">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:layout_alignParentTop="true"

        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal">

        <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:columnCount="2"
            android:rowCount="4"
            tools:context="com.example.rene.steppenwolf.MainMenu">

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_marginRight="25dp"
                android:layout_row="0">

                <Button
                    android:id="@+id/erzaehltechnik"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ErzÃ¤hltechnik" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="0">

                <Button
                    android:id="@+id/struktur_aufbau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Struktur und Aufbau" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_marginRight="25dp"
                android:layout_row="1">

                <Button
                    android:id="@+id/symbole_motive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Symbole und Motive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="1">

                <Button
                    android:id="@+id/sprache_stil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sprache und Stil" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_marginRight="25dp"
                android:layout_row="2">

                <Button
                    android:id="@+id/inhalt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Inhalt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="2">

                <Button
                    android:id="@+id/biographie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Autor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_marginRight="25dp"
                android:layout_row="3">

                <Button
                    android:id="@+id/aufsatztechnik"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Aufsatztechnik" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="3">

                <Button
                    android:id="@+id/figuren"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Figuren- konstellation" />
            </LinearLayout>
        </GridLayout>


    </LinearLayout>
</RelativeLayout>
